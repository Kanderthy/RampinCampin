<?xml version="1.0" encoding="UTF-8"?>
<widget xmlns = "http://www.w3.org/ns/widgets"

	xmlns:gap  = "http://phonegap.com/ns/1.0"
	id		   = "com.phonegap.example"
	version	   = "1.0.0"
	versionCode ="10">
	
	<!-- versionCode is optional and Android only -->

   <preference name="phonegap-version" value="3.1.0" />

   <!-- Apple device targeting -->
   <preference name="target-device" value="universal" />

   <!-- Full Screen -->
   <preference name="fullscreen" value="true" />	
   <name>Rampin Campin</name>
   
   <description>
     A state park infomation share system for parks what they have to offer.
   </description>
   
   <author href="http://kazewebdesigns.net" email="kadesigns@kazewebdesigns.net">
      Kathy Anderson
   </author>
   <!--icon-->
   <icon src="icon.png"/>
   
   <icon gap:platform="ios" height="57" src="icon.png" width="57" />
   <icon gap:platform="ios" height="72" src="icon.png" width="72" />
   <icon gap:platform="ios" height="114" src="icon.png" width="114" />
   <icon gap:platform="ios" height="144" src="icon.png" width="144" />
   <!-- Splash Screen -->
   <splash scr="splash.png">
   <gap:splash src="splash.png"gap:platform="ios" width="320" height="480" />
   <gap:splash src="splash.png"gap:platform="ios" width="640" height="960" />
   <gap:splash src="splash.png"gap:platform="ios" width="640" height="1136" />
   <gap:splash src="splash.png"gap:platform="ios" width="1024" height="748" />
   <gap:splash src="splash.png"gap:platform="ios" width="768" height="1004" />
   
   <!-- retina iPad support: PhoneGap 2.5.0+ only -->
   <gap:splash src="splash.png"gap:platform="ios" width="2048" height="1496" />
   <gap:splash src="splash.png"gap:platform="ios" width="1536" height="2008" />
   
 </widget>